<section>
    <div class="container">
        <table class="table nt-5">
            <thead>
                <tr>
                    <th scope="col">Ithem</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{#each this.product}}
                    <td>
                        <img style="width: 70px; height: 70px;" src="/product-Images/{{this._id}}.jpg" alt="product image">
                    </td>
                    <td>{{this.Name}}</td>
                    {{/each}}
                    <td>
                        <button class="cart-item-count mr-3">-</button>{{this.quantity}}<button class="cart-items-count ml-3">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<section>
    <div class="container">
        <table class="table nt-5">
            <thead>
                <tr>
                    <th scope="col">Ithem</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>
                        <img style="width: 70px; height: 70px;" src="/product-Images/{{this.product._id}}.jpg" alt="product image">
                    </td>
                    <td>{{this.product.Name}}</td>
                    <td>Rs.{{this.product.Price}}</td>
                    <td>
                        <button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)" >-</button>
                        <span id="{{this.product._id}}">{{this.quantity}}</span>
                        <button class="cart-items-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <hr>
        <hr>
        <div class="float-right pr-5">
            <h5 class="float-left mr-5">Rs.<span id="total">{{totalValue}}</span></h5><br>
            <a href="/place-order" class="btn btn-success mt-3" style="width: 100%;"><b>Place Order</b></a>

        </div>
    </div>
</section>
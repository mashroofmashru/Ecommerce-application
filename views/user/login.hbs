<div class="row">
    <div class="col-md-6">
        <div class="container-login mt-5 ">
            <h1 class="text-center">User-Login</h1>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Email Address:</label>
                    <input type="email" id="Email" name="Email" class="form-control" required placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="Password" name="Password" class="form-control" required
                        placeholder="Enter password">
                </div>
                {{#if loginErr}}
                    <p class="text-danger font-weight-bold">{{loginErr}}</p>
                {{/if}}
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-login btn-block">Login</button>
                </div>
            </form>
            <p class="text-center">Don't have an account? <a href="/signup">Sign up here</a></p>
        </div>
    </div>
</div>
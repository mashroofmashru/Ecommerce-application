<section>
  <div class="container">
    <div class="row my-3">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
    <table class="table mt-3" id="productsTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Price</th>
          <th scope="col">Option</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="height: 50px; width:auto; aspect-ratio: 1/1;" src="/product-Images/{{this._id}}.jpg" height="10px" width="10px" class="thumbanil" alt=""></td>
          <td>{{this.Price}}â‚¹</td>
          <td>
            <a href="/admin/edit-product?id={{this._id}}" class="btn btn-success">Edit</a>
            <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger"
              onclick="return confirm('Do you want to delete {{this.Name}}')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  jQuery(document).ready(function () {
    jQuery('#productsTable').DataTable();
  });
</script>